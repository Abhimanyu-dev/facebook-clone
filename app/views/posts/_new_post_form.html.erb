<div class="new-post-container">


    <div class="head">
        <div class="empty-space"></div>
        <div class="title-container">
            <h3>Create Post
            </h3>
        </div>
        <div class="close">
                        <div class="icon-container">
                            <i class="fa-solid fa-xmark fa-lg"></i>
                        </div>        
                </div>
    </div>
    <div class="user-container">
        <div class="icon-container">
            <i class="fa-solid fa-user"></i>
        </div>
        <div class="text-container">
            <p><%= user.name %></p>
            <div class="share_to">
                <div class="icon-container">
                    <i class="fa-solid fa-user-group fa-sm"></i>
                </div>
                <div class="text-container">
                    Friends
                </div>
            </div>
        </div>
    </div>

    <div class="form-container">
        <%= form_with model: post do |form| %>
            <%= form.text_area :body, autofocus: true, class: "body-container", placeholder: ("What's on your mind, ".concat(user.name.to_s)), rows: 5%>
            <div class="buttons">
                <div class="controls">
                    <div class="icon-container color">
                        <i class="fa-solid fa-brush fa-sm"></i>
                    </div>
                    <div class="icon-container">
                        <i class="fa-solid fa-face-laugh-beam fa-sm"></i>
                    </div>
                </div>

                <div class="add">
                    <p>Add to your post</p>
                    <div class="icons-container">
                        <div class="icon-container photo">
                            <i class="fa-solid fa-photo-film fa-lg"></i>
                        </div>
                        <div class="icon-container tag">
                            <i class="fa-solid fa-user-tag fa-lg"></i>
                        </div>
                        <div class="icon-container feeling">
                            <i class="fa-solid fa-face-laugh-beam  fa-lg"></i>
                        </div>
                        <div class="icon-container location" >
                            <i class="fa-solid fa-location-pin fa-lg"></i>
                        </div>
                        <div class="icon-container mic">
                            <i class="fa-solid fa-microphone fa-lg"></i>
                        </div>
                        <div class="icon-container menu">
                            <i class="fa-solid fa-ellipsis fa-lg"></i>
                        </div>
                    </div>
                </div>
                <%= form.submit "Create" , class: "submit"%>

            </div>
        <% end %>
        
    </div>

</div>

